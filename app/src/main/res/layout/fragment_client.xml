<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin_wide"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="?attr/actionBarSize"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:hint="@string/charge_name"/>
        <TextView
            android:id="@+id/tvCostPerMile"
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="wrap_content"
            android:text="@string/cost_per_mile"
            android:layout_height="wrap_content" />

        <com.aspiration.mileagemaster.EditTextCurrency
            android:id="@+id/etClientMileageCost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:inputType="numberDecimal"
            android:hint="@string/zero_amount"/>
        <TextView
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="wrap_content"
            android:text="@string/Percentage_tax_rate"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etTaxRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/tax_percent"/>
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_activity_enter_the_default_charge"/>
        <Spinner
            android:id="@+id/spStandardCharge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spStandardCharge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spStandardCharge3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>