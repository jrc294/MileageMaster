<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:name="com.aspiration.mileagemaster.StandardChargeActivityFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout="@layout/fragment_standard_charge" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin_wide"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="wrap_content"
            android:text="@string/name"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etChargeName"
            android:layout_width="match_parent"
            android:maxLength="30"
            android:layout_height="wrap_content"
            android:hint="@string/charge_name"/>
        <TextView
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="wrap_content"
            android:text="@string/charge_cost"
            android:layout_height="wrap_content" />
        <com.aspiration.mileagemaster.EditTextCurrency
            android:id="@+id/etChargeCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/zero_amount"/>
    </LinearLayout>
</fragment>
