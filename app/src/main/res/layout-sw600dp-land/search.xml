<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="16dp"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TableLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  	<TableRow 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="15sp"
  			android:text="sw500dp"/>
        <Spinner
            android:id="@+id/spDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="roboto"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>
  	</TableRow>
  	<TableRow 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="15sp"
  			android:text="Date To"/>
        <Spinner
            android:id="@+id/spDateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="roboto"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>
  	</TableRow>
   	<TableRow 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="15sp"
  			android:text="Show "/>
  		<Spinner 
  			android:id="@+id/spnCompleted"
  			android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:fontFamily="roboto"
  			android:layout_height="wrap_content"/>
  	</TableRow>
    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"/>
  	<TableRow
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="15sp"
  			android:text=" "/>
  		<CheckBox
  			android:id="@+id/cbkIncludeAgency"
  			android:layout_width="wrap_content"
  			android:text="@string/filteroncustomer"
  			android:layout_height="wrap_content"/>
  	</TableRow>
	<TableRow 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView
  			android:id="@+id/lblAgencies"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="15sp"
  			android:text="@string/client"/>
  		<Spinner 
  			android:id="@+id/spnAgency"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"/>
  		</TableRow>
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
			android:id="@+id/SearchOkButton"
			android:layout_weight="0.5"
			android:text="@string/search"/>
	  	<Button
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/SearchCancelButton"
	  		android:layout_weight="0.5"
	  		android:text="@string/cancel"/>
	</LinearLayout>
</LinearLayout>

